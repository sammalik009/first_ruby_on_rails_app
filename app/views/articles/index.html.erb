<h1 class="text-center mt-3">Article Listing page</h1>
<div class="text-center">
    <%= link_to 'Create New Article', new_article_path, class: "btn btn-outline-success" %>
</div>
<div class="container">
    <% for article in @articles %>
        <div class="row justify-content-md-center">
            <div class="col-8" >
                <div class="card text-center mt-3">
                    <h5 class="card-header">by <%= article.user.username %></h5>
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= truncate(article.description, length:50) %></p>
                        <%= link_to 'Show', article_path(article), class: "btn btn-outline-success" %>
                        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info" %>
                        <%= link_to 'Delete', article_path(article), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure?"} %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>
                            Created At <%= time_ago_in_words(article.created_at)%> ago and Updated At <%= time_ago_in_words(article.updated_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
