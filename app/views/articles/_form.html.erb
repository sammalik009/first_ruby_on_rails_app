<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors' %>
            <%= form_with(model: @article, local: true, class:"shadow p-3 mb-3 bg-info rounded")  do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, placeholder: "Enter Title", class:"form-control" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, placeholder: "Enter Description", class:"form-control" %>
                    </div>
                </div>
                <div class="form-group text-center">
                    <%= f.submit class:"btn btn-outline-success text-center" %>
                </div>
            <% end %>
        </div>
    </div>
</div>