<% if @article.errors.any? %>
    <h1>These Errors prevented the article to be created</h1>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></h3>
        <% end %>
    </ul>
<% end %>
<div class="container">
    <%= form_with(model: @article, local: true, class:"jumbotron text-center text-white")  do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_field :title, placeholder: "Enter Title", class:"form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label" %>
            <div class="col-10">
                <%= f.text_area :description, rows:5, placeholder: "Enter Description", class:"form-control" %>
            </div>
        </div>
        <div class="form-group text-center">
            <%= f.submit class:"btn btn-outline-success text-center" %>
        </div>
    <% end %>
</div>