<h1>Edit Article</h1>
<% if @article.errors.any? %>
    <h1>These Errors prevented the article to be created</h1>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></h3>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: @article, local: true)  do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description, rows:5 %>
    </p>
    <p>
        <%= f.submit "Save Changes" %><br/>
    </p>
<% end %>
<p>
    <%= link_to 'Cancel and go back to Articles list', articles_path %>
</p>